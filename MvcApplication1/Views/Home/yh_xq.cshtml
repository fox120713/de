@{
    ViewBag.Title = "yh_xq";
    Layout = "~/Views/Shared/muban.cshtml";
}
@model List<MvcApplication1.Models.Users>
<link href="~/Scripts/main.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<link href="~/Scripts/bootstrap.css" rel="stylesheet" />
<style type="text/css">
    .yh_xq_quan {
        height: 40%;
        width: 80%;
        margin: 0px auto;
        padding: 0px;
        /*border: 5px solid black;*/
    }

        .yh_xq_quan table {
            margin: 0px auto;
            text-align: left;
            margin-top: 50px;
            width: 550px;
        }

    .xg_xx tr, td {
        /*border: 1px solid red;*/
        width:300px;
    }

    table img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
    }

    table input {
        border-radius: 5px;
    }
</style>
<div id="div_head">
    @*次级选项卡*@
    @Html.Partial("Partial1")
</div>
<div class="yh_xq_quan">
    <form action="/Home/yh_xqsctx" method="post" enctype="multipart/form-data">
        <table cellspacing="0px" class="yh_xx">
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-weight: bold;">

                        <img src="~/userimg/@item.usersimg" />

                    </td>
                    <td style="font-size: 25px;">@item.username<br />
                        <a href="#" style="color: red; text-decoration: none;">修改个人信息</a>

                    </td>
                </tr>
                <tr>
                    <td style="font-weight: bold; font-size: 30px;">性别：</td>
                    <td style="font-size: 25px;">@item.sex</td>
                </tr>
                <tr style="height: 80px;">
                    <td style="font-weight: bold; font-size: 30px;">年龄：</td>
                    <td style="font-size: 25px;">@item.age</td>
                </tr> 
            }
        </table>

        <table class="xg_xx" cellspacing="0px">
            <tr>
                <td style="font-weight: bold; font-size: 30px;">请选择头像:</td>
                <td>
                    <input name="file" type="file" />
                </td>
            </tr>

            <tr>
                <td style="font-weight: bold; font-size: 30px;">请输入昵称：</td>
                <td>
                    <input type="text" name="nic" placeholder="请输入昵称" required="required" oninvalid="setCustomValidity('请输入昵称')" oninput="setCustomValidity('')" />
                </td>
            </tr>

            <tr>
                <td style="font-weight: bold; font-size: 30px;">性别：</td>
                <td>
                    <input type="radio" id="radiox" name="x" checked="checked" value="男" />男
            <input type="radio" id="radioy" name="x" value="女" />女
                </td>
            </tr>

            <tr>
                <td style="font-weight: bold; font-size: 30px;">年龄：</td>
                <td>
                    <input type="text" name="age" style="width: 80px;" placeholder="请输入年龄" required="required" oninvalid="setCustomValidity('请输入年龄')" oninput="setCustomValidity('')" />
                </td>
            </tr>

            <tr>
                <td colspan="2" style="text-align: center;">
                    <input type="submit" value="更改" name="submit1" id="submit1" class="btn btn-primary btn-lg " style="width: 150px; height: 50px; text-align: center; font-size: 25px;" />
                    <input type="button" value="取消" id="cancel" class="btn btn-primary btn-lg " style="width: 150px; height: 50px; text-align: center; font-size: 25px;" /></td>
            </tr>
        </table>

    </form>
</div>

<script type="text/javascript">
    $(function () {
        $(".xg_xx").css("display", "none")
        $("a:contains('修改个人信息')").click(function () {
            $(".xg_xx").css("display", "block")
            $(".yh_xx").css("display", "none")
            $(this).css("display", "none")
        })
        $("#submit1").click(function () {
            $("a:contains('修改个人信息')").css("display", "block")
            $(".xg_xx").css("display", "none")
            $(".yh_xx").css("display", "block")
        })
        $("#cancel").click(function () {
            $("a:contains('修改个人信息')").css("display", "block")
            $(".xg_xx").css("display", "none")
            $(".yh_xx").css("display", "block")
        })


    })

</script>
