@{
    ViewBag.Title = "insertSongRD";
}
@model List<MvcApplication1.Models.Song>
<form method="post" action="/Home/insertSongRD">
    <table>
        <tr>
            <td>
                <select name="gqid">
                    @foreach (var item in Model)
                    {
                        <option value="@item.gqid">@item.gqname</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <input type="number" name="gqhot" min="0"  required="required"  oninvalid="setCustomValidity('不能输入负数！') " oninput="setCustomValidity('')"/>
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="添加"/></td>
        </tr>
    </table>
</form>
